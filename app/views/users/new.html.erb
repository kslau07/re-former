<%# use a default email to save time, can we use a default password too? %>

<%= form_with model: @user do |form| %>
	<ul>
		<li>
			<%= form.label :username %>
			<%= form.text_field :username %>
		</li>
		<li>
			<%= form.label :email %>
			<%= form.text_field :email %>
		</li>
		<li>
			<%= form.label :password %>
			<%= form.text_field :password %>
		</li>
		<li>
			<%= form.submit %>
		</li>
	</ul>
<% end %>

